#include <conio.h>
#include <iostream>
#include <stdlib.h>
using namespace std;

class Animal{
    private:
        char *nombre, *especie;
        int edad;
    public:
    Animal(){
        Animal (char *nombre, char *especie, int edad){
            setNombre(nombre);
            setEspecie(especie);
            setEdad(edad);
        }
        //metodos modificadores
        void setNombre(char *n){ nombre=n; }
        void setEspecie (char *a){ especie a; }
        void setEdad(int w){ edad = w;}
        void setDatos(){
                char *nombre = new char[20], *especie = new char [30];
                int edad;
                cout <<"Ingresar tipo de animal: ";
                fgets(nombre, 20, stdin);
                cout << "Ingresar especie: ";
                fflush stdin );
                fgets(especie, 30, stdin);
                cout <<"Ingresar edad del animal: ";
                cin >> edad;
                setNombre(nombre); setEspecie(especie); setEdad(edad);
        }
